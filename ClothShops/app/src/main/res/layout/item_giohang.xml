<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="@drawable/vien"
        android:elevation="15dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <CheckBox
            android:id="@+id/item_giohang_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#2E74DC" />

        <ImageView
            android:id="@+id/item_giohang_img"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/img_10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_giohang_tensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bộ đỏ lông xù"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_giohang_gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá 1 sp"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_giohang_giasp2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="bottom"
                android:text="500,000đ"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_giohang_tru"
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="end"
                android:src="@drawable/baseline_remove_circle_24" />

            <TextView
                android:id="@+id/item_giohang_soluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1" />

            <ImageView
                android:id="@+id/item_giohang_cong"
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="end"
                android:src="@drawable/baseline_add_circle_outline_24" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
