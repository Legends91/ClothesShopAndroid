<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/edittext"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/loginText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng kí"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="32sp"
                android:textStyle="bold"

                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hoten"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Họ tên"
                android:inputType="text"
                android:padding="8dp"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Số điện thoại"
                android:inputType="text"
                android:padding="8dp"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext"
                android:drawableLeft="@android:drawable/sym_action_email"
                android:drawablePadding="8dp"
                android:drawableTint="#000000"
                android:ems="10"
                android:hint="Email"
                android:inputType="text|textEmailAddress"
                android:padding="8dp"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext"
                android:drawableLeft="@android:drawable/ic_secure"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Mật khẩu"
                android:inputType="text|textPassword"
                android:padding="8dp"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext"
                android:drawableLeft="@android:drawable/ic_secure"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Xác nhận mật khẩu"
                android:inputType="text|textPassword"
                android:padding="8dp"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/ckdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:buttonTint="#5196FF"
                android:drawableTint="#00AEFF"
                android:foregroundTint="#82D3FF"
                android:text="Chấp nhận các điều khoản"
                android:textColor="#2E74DC" />

            <Button
                android:id="@+id/btndangki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/Green"
                android:onClick="dangkithanhcong"
                android:text="Đăng kí"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnqldangnhap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/purple"
                android:onClick="quaylaidangnhap"
                android:text="Quay lại đăng nhập"
                android:textSize="15sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>