<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="@drawable/vien"
        android:elevation="15dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/item_thanhtoan_img"
            android:layout_width="91dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:src="@drawable/img_10" />

        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="74dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_thanhtoan_tensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bộ đỏ lông xù"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_thanhtoan_gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá 1 sp"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_thanhtoan_giasp2"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:gravity="bottom"
                android:text="500,000đ"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/item_thanhtoan_soluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            />



    </LinearLayout>

</LinearLayout>
