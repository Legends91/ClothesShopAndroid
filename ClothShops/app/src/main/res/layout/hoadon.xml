                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:background="#12FF16"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
